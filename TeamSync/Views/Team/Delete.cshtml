<!-- Views/Team/Delete.cshtml -->
@model TeamSync.Models.Team
@{
    ViewData["Title"] = "Delete Team - TeamSync";
}

<div class="delete-container">
    <h1>Delete Team</h1>
    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this team?</h3>
        <p>This action cannot be undone. All team data will be permanently removed.</p>
    </div>

    <div class="team-details">
        <h2>@Model.TeamName</h2>
        <p>@Model.Description</p>
        <p>Created on: @Model.CreatedAt.ToString("MMM dd, yyyy")</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.TeamId" />
        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Delete Team</button>
            <a asp-action="Details" asp-route-id="@Model.TeamId" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>